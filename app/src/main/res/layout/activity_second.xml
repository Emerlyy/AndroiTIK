            android:layout_alignBottom="@+id/checkBox1"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="-5dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="-10dp" />

